	#tag Method, Flags = &h0, Description = 506F6C6C73207468652063757272656E742077656174686572206F66206C6F636174696F6E4944
		Sub RefreshTime()
		  dim curweather as OpenWeatherData = OpenWeather.GetCurrentWeather(LocationID, API_ID, _
		  "units=metric", "lang=de")
		  if curweather <> nil then
		    TemperatureField.text = curweather.Temperature.ToText(xojo.core.locale.Current, "##.##")+" Â°C"
		    me.Title = curweather.CityName
		    TimeLabel.Text = curweather.DataTime.ToText(xojo.core.locale.Current)
		  end if
		End Sub
	#tag EndMethod


